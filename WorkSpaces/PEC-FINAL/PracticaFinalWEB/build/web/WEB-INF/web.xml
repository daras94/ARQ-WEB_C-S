<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Mostrar_Vuelos</servlet-name>
        <servlet-class>Servlets.Mostrar_Vuelos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCompraCesta</servlet-name>
        <servlet-class>Servlets.ServletCompraCesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarBilletes</servlet-name>
        <servlet-class>Servlets.MostrarBilletes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAnadirCesta</servlet-name>
        <servlet-class>Servlets.ServletAnadirCesta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Mostrar_Vuelos</servlet-name>
        <url-pattern>/Mostrar_Vuelos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCompraCesta</servlet-name>
        <url-pattern>/ServletCompraCesta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarBilletes</servlet-name>
        <url-pattern>/MostrarBilletes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAnadirCesta</servlet-name>
        <url-pattern>/ServletAnadirCesta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
